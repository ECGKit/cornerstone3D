{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "lib": ["ES2022", "dom"],
        "target": "ES2022",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "src",
        "declaration": true,
